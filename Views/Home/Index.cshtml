@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}
@if (!Model.Any())
{
    <div class="alert  alert-warning mt-5">
        <h4 class="alert-heading">Warning No Games!</h4>
        <p class="mb-0">No games were added yet</p>
    </div>
}
else {



  <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6">

                <a class="card border-success mb-3 text-decoration-none rounded-2 tstc" asp-controller="Games" asp-action="GetById" asp-route-id="@game.Id">
                    <div class="card-body" style="background-image : url(@($"{FileSet.ImagesPath}/{game.Cover}")); background-size:cover;background-position: center; height: 450px;">                  
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-end h-100 ">
                            <span class="badge bg-primary fs-6">@game.Category?.Name</span>
                        </div>
                        <h5>@game.Name</h5>
                        <div>
                            @foreach (var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.device.Icon me-2 fs-4"></i>
                            }
                     </div>


               
                    </div>
             </a>
             </div>

        
        }
   </div>
}


